<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationViewItemStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemBackground">@color/colorPrimary</item>
    </style>

    <style name="NavigationViewItemTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/super_mario</item>
    </style>

    <style name="headerTitleDrawerStyle">
        <item name="android:fontFamily">@font/super_mario</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="titleCardStyle">
        <item name="android:fontFamily">@font/retro_mario_regular</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="detailTextStyle">
        <item name="android:fontFamily">@font/retro_mario_regular</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="detailDescriptionStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="detailSkillStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>